<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sailing.Adminpanel">
    <ContentPage.Content>
        
        <StackLayout BackgroundColor="{StaticResource PrimaryColor}">
            <Label Text="Adminpanel" Style="{StaticResource PageHeader}" />
            <!-- laat je activiteit toevoegen -->
            <Button Text="Add Activities" x:Name="AddActivitybutton" Padding="20,0,0,0" Margin="10" Style="{StaticResource BorderedButton}" VerticalOptions="Start" HeightRequest="50" Clicked="AddActivity_Clicked"/>

            <!-- brengt je naar activiteiten moderation-->
            <Button Text="Moderate Activities" x:Name="Activitybutton" Padding="20,0,0,0" Margin="10" Style="{StaticResource BorderedButton}" VerticalOptions="Start"  HeightRequest="50" Clicked="Activity_Clicked"/>

            <!-- laat je reviews moderaten -->
            <Button Text="Moderate Reviews" x:Name="Reviewbutton" Padding="20,0,0,0" Margin="10" Style="{StaticResource BorderedButton}" VerticalOptions="Start"  HeightRequest="50" Clicked="Review_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>