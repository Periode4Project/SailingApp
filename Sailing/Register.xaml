<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sailing.Register">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource PrimaryColor}">
            <Label Text="Register" Style="{StaticResource PageHeader}" />

            <Label Text="Username:" TextColor="{StaticResource TertiaryColor}" FontSize="20" Margin="20,0"/>
            <Entry x:Name="Username"  Placeholder="Password..." PlaceholderColor="#BBBBBB" Margin="20,0"/>

            <Label Text="Full Name:" TextColor="{StaticResource TertiaryColor}" FontSize="20" Margin="20,0"/>
            <Entry x:Name="FullName"  Placeholder="Password..." PlaceholderColor="#BBBBBB" Margin="20,0"/>

            <Label Text="Password:" TextColor="{StaticResource TertiaryColor}" FontSize="20" Margin="20,0"/>
            <Entry x:Name="Password"  Placeholder="Password..." PlaceholderColor="#BBBBBB" IsPassword="True" Margin="20,0"/>

            <Button Text="Create New Account" x:Name="CreateAccountButton" Padding="20,0" Margin="20,0" BackgroundColor="{StaticResource PrimaryColor}" HeightRequest="80" TextColor="{StaticResource TertiaryColor}" BorderWidth="3" BorderColor="{StaticResource TertiaryColor}" CornerRadius="20" Clicked="CreateAccountButton_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>